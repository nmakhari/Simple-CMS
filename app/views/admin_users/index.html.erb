<% @page_title = "All Admin Users"%>

<%= link_to("<<Back to Menu", admin_path, :class => "back-link")%>

<div class="admin users index">
    <h2>Admin Users</h2>
    <%= image_tag("plus_sign.png", size: "11x11", alt: "+")%>
    <%=link_to("Create Admin User", new_admin_user_path, :class => "action new")%>

        <table class="listing" summary="Admin User List">
            <tr class="header">
                <th>Username</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
            <%@admin_users.each{ |user|%>
                <tr>
                <td><%=user.username%></td>
                <td><%=mail_to(user.email)%></td>
                <td><%=user.first_name%></td>
                <td><%=user.last_name%></td>
                <td class="actions">
                    <%=link_to("Edit", edit_admin_user_path(user), :class=>"action edit") %>
                    <%=link_to("Delete", delete_admin_user_path(user), :class=>"action delete") %>
                </td>
            </tr>
        <%}%>
    </table>
</div>

