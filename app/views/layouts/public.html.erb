<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS: <%= " | #{@page_title}" if @page_title %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>

  <body>

    <div id="header">
      <h1>Simple CMS</h1>
    </div>

    <div id="login-link" class="login">
      <%= link_to("Login as Admin", :controller => "access", :action => "login", :class => "login")%>
    </div>

    <div id="main">

      <div id="navigation">
        <%= render(:partial => "layouts/navigation", :locals => {:subjects => @subjects})%>
      </div>


      <div id="content">
        <%= yield %>
      </div>

      <div class="clear"></div>

    </div>

    <div id="footer">
      <p id="copyright">Footer is here</p>
    </div>

  </body>
</html>
